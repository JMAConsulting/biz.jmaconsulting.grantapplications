<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Grant</base>
  <class>GrantApplicationPage</class>
  <name>civicrm_grant_app_page</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique GrantApplicationPage ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>title</name>
    <type>varchar</type>
    <length>255</length>
    <html>
      <type>text</type>
    </html>
  </field>
  <field>
    <name>intro_text</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>4</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>footer_text</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>4</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>grant_type_id</name>
    <type>int unsigned</type>
    <title>Grant Type</title>
    <pseudoconstant>
      <optionGroupName>grant_type</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
    <export>true</export>
    <required>true</required>
    <comment>Type of grant. Implicit FK to civicrm_option_value in grant_type option_group.</comment>
    <add>1.8</add>
  </field>
  <field>
    <name>default_amount</name>
    <type>decimal</type>
    <title>Amount</title>
    <length>20,2</length>
    <html>
      <type>Text</type>
      <size>8</size>
    </html>
    <comment>Price field option amount</comment>
    <add>1.8</add>
  </field>
  <field>
    <name>is_draft</name>
    <default>0</default>
    <type>boolean</type>
  </field>
  <field>
   <name>draft_title</name>
   <type>varchar</type>
    <length>255</length>
    <html>
      <type>text</type>
    </html>
  </field>
  <field>
    <name>draft_text</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>draft_footer</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
   <name>thankyou_title</name>
   <type>varchar</type>
    <length>255</length>
    <html>
      <type>text</type>
    </html>
  </field>
  <field>
    <name>thankyou_text</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>thankyou_footer</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>is_email_receipt</name>
    <type>boolean</type>
    <default>0</default>
  </field>
  <field>
    <name>receipt_from_name</name>
    <type>varchar</type>
    <length>255</length>
  </field>
  <field>
    <name>receipt_from_email</name>
    <type>varchar</type>
    <length>255</length>
  </field>
  <field>
    <name>cc_receipt</name>
    <type>varchar</type>
    <length>255</length>
  </field>
  <field>
    <name>bcc_receipt</name>
    <type>varchar</type>
    <length>255</length>
  </field>
  <field>
    <name>receipt_text</name>
    <type>text</type>
    <html>
      <type>TextArea</type>
      <rows>6</rows>
      <cols>50</cols>
    </html>
    <add>1.8</add>
  </field>
  <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>1</default>
    <add>1.8</add>
  </field>
  <field>
    <name>start_date</name>
    <type>datetime</type>
    <uniqueName>grant_app_start_date</uniqueName>
    <title>Grant Application Page Start Date</title>
    <headerPattern>/^start|(s(tart\s)?date)$/i</headerPattern>
    <import>true</import>
    <add>1.7</add>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>
  <field>
    <name>end_date</name>
    <type>datetime</type>
    <uniqueName>grant_app_end_date</uniqueName>
    <title>Grant Application Page End Date</title>
    <headerPattern>/^end|(e(nd\s)?date)$/i</headerPattern>
    <import>true</import>
    <add>1.7</add>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field> 
  <field>
    <name>created_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>created_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>created_date</name>
    <type>datetime</type>
    <title>Event Created Date</title>
    <comment>Date and time that event was created.</comment>
    <add>3.0</add>
  </field>
</table>
